@model IEnumerable<WebApplication2.Velos>

@{
    ViewBag.Title = "Велосипеды";
}

<h2>Велосипеды</h2>

<p>
    @Html.ActionLink("Добавить", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Модель")
        </th>
        <th>
            @Html.DisplayName("Взят")
        </th>
        <th>
            @Html.DisplayName("Взят раз")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.model)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.taken)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.timesT)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.id }) |
            @Html.ActionLink("Подробнее", "Details", new { id=item.id }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
