@model WebApplication2.Velos

@{
    ViewBag.Title = "Удалить";
}

<h2>Удалить</h2>

<h3>Вы уверены?</h3>
<div>
    <h4>Велосипед</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Модель")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.model)
        </dd>

        <dt>
            @Html.DisplayName("Взят")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.taken)
        </dd>

        <dt>
            @Html.DisplayName("Взят раз")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.timesT)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Удалить" class="btn btn-default" /> |
            @Html.ActionLink("Вернуться к списку", "Index")
        </div>
    }
</div>
